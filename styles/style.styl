// colors ----------------------------------------------------------------------

color-background = #272722
color-text-default = #DDDDDD
color-purple = #BF97D4
color-green = #96CD8A
color-ciano = #4CD2FF
color-blue = #6697D0
color-red = #F07973

// constants -------------------------------------------------------------------

album-cover-dimension = 400px
album-controls-margin = 150px
album-buttons-padding = 22px

// mixins ----------------------------------------------------------------------

vendor-property(property, args)
  -webkit-{property} s(args)
  -moz-{property} s(args)
  -ms-{property} s(args)
  -o-{property} s(args)
  {property} s(args)

calc(property, args)
  {property} s('-webkit-calc(%s)', s(args))
  {property} s('-moz-calc(%s)', s(args))
  {property} s('-ms-calc(%s)', s(args))
  {property} s('-o-calc(%s)', s(args))
  {property} s('calc(%s)', s(args))

transition()
  vendor-property('transition', arguments)

// general styles --------------------------------------------------------------

*
  margin 0
  padding 0

html
  overflow-x hidden

body
  overflow-x hidden
  background color-background
  color color-text-default
  font-size 14px
  font-family 'Source Code Pro', Helvetica, Arial, sans-serif

.purple
  color color-purple

.red
  color color-red

.blue
  color color-blue

.ciano
  color color-ciano

.green
  color color-green

// components ------------------------------------------------------------------

.wi-string
  &::before,
  &::after
    content "'"

.wi-string-double
  &::before,
  &::after
    content '"'

.wi-header
  text-align center
  letter-spacing -0.1em
  font-weight normal
  font-size 96px
  line-height 250px

.wi-link
  color color-text-default
  text-decoration none

.wi-control-prev-album,
.wi-control-next-album
  position absolute
  top 435px
  padding 0px 6px
  border-radius 5px
  line-height 200%
  text-decoration none
  transition('background 0.35s ease')

  &:hover
    background rgba(0,0,0,0.2)

.wi-control-prev-album
  left 50%
  margin-left -(album-controls-margin + (album-cover-dimension / 2))

.wi-control-next-album
  right 50%
  margin-right -(album-controls-margin + (album-cover-dimension / 2))

.wi-control-name
  text-decoration underline

.wi-control-disabled
  color #333
  cursor default

  &:hover
    background none

  .wi-control-name
    color #333
    text-decoration none

.wi-album-cover
  position relative
  overflow hidden
  margin auto
  width album-cover-dimension
  height album-cover-dimension
  border-radius 10px
  background-color #222
  background-position center
  background-size 100%
  background-repeat no-repeat
  box-shadow 0px 2px 6px 1px rgba(0,0,0,0.5)

.wi-button
  position absolute
  overflow hidden
  border-radius 50%
  background rgba(0,0,0,0.5)
  box-shadow 1px 2px 4px rgba(0,0,0,0.4)
  cursor pointer
  transition('background 0.5s ease, box-shadow 0.5s ease')

  &:hover
    background rgba(0,0,0,0.7)
    box-shadow 1px 2px 6px 2px rgba(0,0,0,0.6)

.wi-button-prev,
.wi-button-next
  width 69px
  height @width
  top ((album-cover-dimension - @width) / 2)
  transition('all 0.5s ease')

  &::before,
  &::after
    position absolute
    top 20px
    content ''
    opacity 0.7

.wi-button-prev
  left album-buttons-padding

  &.wi-state-hidden
    left -75px
    opacity 0

  &::before
    left 20px
    display block
    width 6px
    height 30px
    background #ccc

  &::after
    left 25px
    width 0
    height 0
    border-top 15px solid transparent
    border-right 20px solid #ccc
    border-bottom 15px solid transparent

.wi-button-next
  right album-buttons-padding

  &.wi-state-hidden
    right -75px
    opacity 0

  &::before
    left 23px
    width 0
    height 0
    border-top 15px solid transparent
    border-bottom 15px solid transparent
    border-left 20px solid #ccc

  &::after
    left 42px
    display block
    width 6px
    height 30px
    background #ccc

.wi-button-play
  width 180px
  height @width
  top ((album-cover-dimension - @width) / 2)
  left @top

  &.wi-state-play
    &::before
      position absolute
      top 50px
      left 60px
      width 0
      height 0
      border-top 40px solid transparent
      border-bottom 40px solid transparent
      border-left 70px solid #ccc
      content ''
      opacity 0.7

  &.wi-state-pause
    &::before,
    &::after
      position absolute
      top 50px
      display block
      width 30px
      height 80px
      background #ccc
      content ''
      opacity 0.7

    &::before
      left 52px

    &::after
      left 95px

.wi-tracklist
  position relative
  left 50%
  margin-top 80px
  margin-left -(album-cover-dimension / 2)
  line-height 200%
  calc(width, s('50% + %s', album-cover-dimension / 2))

.wi-track
  position relative
  display inline-block
  margin-left 10px
  padding 0px 25px 0px 7px
  border-radius 5px
  transition('background 0.25s ease')

  &:hover,
  &.wi-state-playing,
  &.wi-state-paused
    background rgba(0,0,0,0.2)

  &:hover::after,
  &.wi-state-paused::after
    position absolute
    top 8px
    right 7px
    display block
    width 0
    height 0
    border-top 6px solid transparent
    border-bottom 6px solid transparent
    border-left 10px solid #999
    content ''

  &.wi-state-playing
    &::before
      position absolute
      top 8px
      right 15px
      display block
      width 4px
      height 12px
      background #999
      content ''

    &::after
      position absolute
      top 8px
      right 8px
      display block
      width 4px
      height 12px
      background #999
      content ''

    &:hover
      &::after
        border none

.wi-footer
  margin auto
  margin-top 70px
  padding 10px 0 50px 0
  width 400px
  border-top 1px dashed #666
  text-align right
  font-size 12px
  opacity 0.4

  a
    text-decoration none
    &:hover
      text-decoration underline

#wi-01
  background-image url(../images/wiredin01.jpg)